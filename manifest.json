{
    "manifest_version": 2,
    "name": "Highlighter",
    "description": "Highlight text on websites with a simple right-click or keyboard shortcut. Saves highlights on your device.",
    "version": "2.2.0",

    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },

    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-2.1.3.min.js", "utils/storageManager.js", "utils/highlight.js", "utils/errorManager.js",
                   "contentScripts/loadHighlights.js", "contentScripts/highlighterCursor.js"],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": ["analytics.js", "background.js"]
    },

    "commands": {
        "execute-highlight": {
            "suggested_key": {
                "default": "Ctrl+Shift+H"
            },
            "description": "Highlight selected text"
        }
    },

    "permissions": [
        "tabs",
        "contextMenus",
        "storage",
        "<all_urls>"
    ],

    "web_accessible_resources": [
        "images/*.png"
    ],

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
